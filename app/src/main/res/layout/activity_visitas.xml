<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vistas.VisitasActivity">

    <ImageButton
        android:id="@+id/ib_anterior"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/izquierda" />

    <ImageButton
        android:id="@+id/ib_primero"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/doble_izquierda" />

    <ImageButton
        android:id="@+id/ib_siguiente"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="65dp"
        app:srcCompat="@mipmap/derecha" />

    <ImageButton
        android:id="@+id/ib_ultimo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@mipmap/doble_derecha" />

    <TextView
        android:id="@+id/t_pagina"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/ib_ultimo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="13dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/l_visitas"
        android:layout_width="wrap_content"
        android:layout_height="422dp"
        android:layout_below="@+id/t_pagina"
        android:layout_alignStart="@+id/ib_primero"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp" />
</RelativeLayout>